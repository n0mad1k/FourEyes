version: 1

formatters:
    precise:
        format: '%(asctime)s - %(name)s - %(lineno)d - %(levelname)s - %(message)s'

handlers:
    file:
        class: logging.handlers.RotatingFileHandler
        formatter: precise
        filename: /var/log/matrix-synapse/homeserver.log
        maxBytes: 104857600
        backupCount: 10
        encoding: utf8

    console:
        class: logging.StreamHandler
        formatter: precise

loggers:
    synapse.storage.SQL:
        level: WARN

root:
    level: INFO
    handlers: [file]

disable_existing_loggers: false
